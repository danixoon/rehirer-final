{
  "name": "rehirer",
  "version": "0.0.1",
  "main": "./dist/server.js",
  "author": "D.",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.34",
    "@types/express": "^4.16.1",
    "@types/joi": "^14.3.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.3.26",
    "@types/node": "^11.13.4",
    "bcrypt": "^3.0.5",
    "concurrently": "^4.1.0",
    "config": "^3.1.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.5.1",
    "react-feather": "^1.1.6",
    "ts-node": "^8.0.3",
    "typescript": "^3.4.3"
  },
  "scripts": {
    "start": "node ./dist/server.js",
    "dev": "concurrently --kill-others \"yarn run client:dev\" \"yarn run server:watch\"",
    "server:dev": "node --inspect=5858 -r ts-node/register ./src/server.ts",
    "client:dev": "cd client && yarn start",
    "client:build": "cd client && yarn build",
    "client:install": "cd client && yarn",
    "server:watch": "nodemon",
    "build": "tsc",
    "heroku-postbuild": "mkdir config && yarn && yarn run build && yarn run client:install && yarn run client:build"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn server",
    "ext": "ts"
  },
  "repository": "https://github.com/danixoon/rehirer"
}
